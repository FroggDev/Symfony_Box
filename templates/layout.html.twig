    <!-- A RANGER -->

    <style type="text/css">
        header {
            background-image: url({{ asset('images/bandeau.jpg') }});
            background-repeat: no-repeat;
            padding-bottom: 10px;
            background-size: cover;
        }
        header .row {margin-bottom: 0px !important;}

        #workflow{
            display: table;
            margin: auto;
        }

        #workflowContainer{
            text-align: center;
        }

        .round,.square{
            width:100px;
            height:100px;
            text-align:center;
            vertical-align: middle;
            display: table-cell;

            color: #E00000;
            text-shadow: 0 4px 0 rgba(0,51,102,0);
            padding: 10px 20px;
            box-shadow: 0 1px 0 0 #FFFFFF inset;
            border: 1px solid #F5C9D2;
            background: linear-gradient( -180deg , #FFF2F5 , #FFE3E9 );

        }

        .selected{
            color: #004D40;
            text-shadow: 0 4px 0 rgba(0,51,102,0);
            padding: 10px 20px;
            border: 1px solid #00897B;
            background: linear-gradient( -180deg , #B2DFDB , #80CBC4 );
            box-shadow: 0 1px 3px 0 rgba(0,0,0,0.5) , 0 0 1px 0 #FFFFFF inset;
        }


        .arrow{
            text-align:center;
            vertical-align: middle;
            display: table-cell;
            color: #E00000;
        }

        .round{border-radius: 50px;}



         #workflowDescription IMG{
             height :50px;
         }

        #workflowDescription .imgContainer{
            float:left;
        }

        NAV .userstatus{
            float:right;
        }

        .row {
         margin-right:0 !important;
         margin-left:0 !important;
        }


    </style>

